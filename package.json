{
  "name": "serverless-images-api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "migrate:local": "wrangler d1 migrations apply serverless-images-api --local",
    "migrate:remote": "wrangler d1 migrations apply serverless-images-api --remote",
    "deploy": "pnpm run migrate:remote && pnpm run build && wrangler deploy",
    "preview": "pnpm run build && wrangler preview",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "cf-typegen": "wrangler types",
    "prepare": "husky && pnpm run migrate:local"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@cloudflare/vite-plugin": "^1.25.2",
    "@tailwindcss/vite": "^4.2.0",
    "@tanstack/react-devtools": "^0.7.11",
    "@tanstack/react-form-start": "^1.28.3",
    "@tanstack/react-router": "^1.161.3",
    "@tanstack/react-router-devtools": "^1.161.3",
    "@tanstack/react-router-ssr-query": "^1.161.3",
    "@tanstack/react-start": "^1.161.3",
    "@tanstack/router-plugin": "^1.161.3",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "husky": "^9.1.7",
    "kysely": "^0.28.11",
    "kysely-d1": "^0.4.0",
    "lucide-react": "^0.545.0",
    "motion": "^12.34.3",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.0",
    "usehooks-ts": "^3.1.1",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tanstack/devtools-vite": "^0.3.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.19.11",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "jsdom": "^27.4.0",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "shadcn": "^3.8.5",
